datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  stacks        Stack[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Stack {
  id            String    @id @default(cuid())
  name          String
  description   String?
  compose       String    // Docker compose YAML content
  status        String    // running, stopped, error
  user          User      @relation(fields: [userId], references: [id])
  userId        String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}